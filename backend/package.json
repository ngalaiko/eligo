{
	"name": "@eligo/backend",
	"private": true,
	"scripts": {
		"dev": "NODE_ENV=development tsc-watch -p ./tsconfig.json --onSuccess \"node build/index.js\"",
		"preview": "NODE_ENV=production node ./build/index.js",
		"build": "rm -rf ./build && tsc",
		"lint": "prettier --check . --config ../.prettierrc --ignore-path ./.gitignore --ignore-path .gitignore",
		"format": "prettier --write . --config ../.prettierrc --ignore-path ./.gitignore --ignore-path .gitignore"
	},
	"type": "module",
	"dependencies": {
		"@eligo/protocol": "workspace:*",
		"@eligo/state": "workspace:*",
		"bcrypt": "^5.0.1",
		"body-parser": "^1.20.0",
		"cookie": "^0.5.0",
		"cors": "^2.8.5",
		"date-fns": "^2.29.1",
		"jose": "^4.8.3",
		"nanoid": "^4.0.0",
		"polka": "1.0.0-next.22",
		"socket.io": "^4.5.3",
		"web-push": "^3.5.0",
		"yargs": "^17.5.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/body-parser": "^1.19.2",
		"@types/cookie": "^0.5.1",
		"@types/cors": "^2.8.12",
		"@types/node": "^18.6.3",
		"@types/yargs": "^17.0.11",
		"node-dev": "^7.4.3",
		"prettier": "^2.6.2",
		"ts-node": "^10.9.1",
		"tsc-watch": "^5.0.3",
		"tsm": "^2.2.2",
		"typescript": "^4.7.4"
	}
}
